{
  "name": "@pragmatics/package-boilerplate",
  "version": "0.1.0",
  "description": "Pragmatics package boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pragmaticsdev/package-boilerplate.git"
  },
  "author": "pvds <pvdsteen@gmail.com>",
  "license": "ISC",
  "homepage": "https://www.npmjs.com/package/package-boilerplate",
  "bugs": {},
  "keywords": [
    "pragmatics"
  ],
  "main": "index.js",
  "files": [
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "test": "jest -o",
    "test:all": "jest",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --cache --fix",
    "lint:css": "stylelint **/*.scss --cache --fix --allow-empty-input",
    "lint:prettier": "prettier . --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "stylelint --fix",
    "*.js": "eslint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "eslint": "^7.8.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^24.0.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "stylelint": "^13.7.0",
    "stylelint-config-pragmatic": "^1.5.0"
  }
}
