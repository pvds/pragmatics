{
  "name": "@pragmatics/eslint-config",
  "version": "0.1.2",
  "description": "Pragmatic eslint config enforcing an understandable and consistent code style.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvds/eslint-config.git"
  },
  "author": "pvds <pvdsteen@gmail.com>",
  "license": "ISC",
  "homepage": "https://www.npmjs.com/package/@pragmatics/eslint-config",
  "bugs": {},
  "keywords": [
    "pragmatics",
    "eslint",
    "eslintconfig",
    "javascript lint",
    "code style"
  ],
  "main": "index.js",
  "files": [
    "config",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "test": "jest -o",
    "test:all": "jest",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --cache --fix",
    "lint:css": "stylelint **/*.scss --cache --fix --allow-empty-input",
    "lint:prettier": "prettier . --write",
    "build": "copyfiles configurations/*.js . -f"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "stylelint --fix",
    "*.js": "eslint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "copyfiles": "^2.3.0",
    "eslint": "^7.8.1",
    "eslint-plugin-jest": "^24.0.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "stylelint": "^13.7.0",
    "stylelint-config-pragmatic": "^1.5.0"
  },
  "peerDependencies": {
    "eslint": ">=7",
    "eslint-plugin-jest": ">=24",
    "jest": ">=26",
    "prettier": ">2"
  },
  "dependencies": {
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0"
  }
}
