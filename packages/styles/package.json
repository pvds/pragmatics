{
  "name": "@pragmatics/styles",
  "version": "1.1.0",
  "description": "Pragmatics configurable sass library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvds/styles.git"
  },
  "author": "pvds <pvdsteen@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/pvds/styles",
  "bugs": "https://github.com/pvds/styles/issues",
  "keywords": [
    "pragmatics",
    "styles",
    "sass",
    "scss"
  ],
  "main": "index.scss",
  "files": [
    "docs"
  ],
  "scripts": {
    "clean": "del-cli dist",
    "sass": "sass styles --style compressed",
    "precopy": "yarn clean",
    "copy": "run-p copy:*",
    "copy:styles": "copyfiles -u 1 \"styles/**/*.scss\" dist",
    "copy:misc": "copyfiles package.json \"*.md\" dist",
    "start": "yarn sass --watch",
    "build": "yarn copy",
    "test": "run-p test:*",
    "test:sass": "yarn sass",
    "test:unit": "jest -o",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --cache --fix",
    "lint:css": "stylelint **/*.scss --cache --fix --allow-empty-input",
    "lint:prettier": "prettier . --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "stylelint --fix --allow-empty-input",
    "*.js": "eslint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/*.(spec|test).[tj]s?(x)]"
    ]
  },
  "devDependencies": {
    "@pragmatics/eslint-config": "^1.0.0",
    "@pragmatics/stylelint-config": "^2.0.0",
    "@types/jest": "^26.0.14",
    "copyfiles": "^2.3.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.8.1",
    "eslint-plugin-jest": "^24.0.2",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "sass": "^1.26.11",
    "stylelint": "^13.7.0"
  }
}
