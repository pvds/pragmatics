{
  "name": "@pragmatics/stylelint-config-order",
  "version": "2.1.0",
  "description": "Opinionated stylelint config pragmatically ordering css properties",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvds/stylelint-config-order.git"
  },
  "author": "pvds <pvdsteen@gmail.com>",
  "license": "ISC",
  "homepage": "https://www.npmjs.com/package/@pragmatics/stylelint-config-order",
  "bugs": {
    "url": "https://github.com/pvds/stylelint-config-order/issues"
  },
  "keywords": [
    "stylelint",
    "stylelint-order",
    "stylelint-config",
    "stylelint-plugin",
    "css order",
    "css grouping",
    "property order",
    "property grouping",
    "declaration order",
    "declaration grouping",
    "pragmatic order",
    "pragmatic grouping"
  ],
  "main": "index.js",
  "files": [
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "test": "jest -o",
    "test:all": "jest",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --cache --fix",
    "lint:css": "stylelint **/*.scss --cache --fix --allow-empty-input",
    "lint:prettier": "prettier . --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "stylelint --fix --allow-empty-input",
    "*.js": "eslint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@pragmatics/eslint-config": "^0.1.2",
    "@types/jest": "^26.0.13",
    "eslint": "^7.8.1",
    "eslint-plugin-jest": "^24.0.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "stylelint": "^13.7.0"
  },
  "peerDependencies": {
    "stylelint": ">=13"
  },
  "dependencies": {
    "stylelint-order": "^4.1.0"
  }
}
