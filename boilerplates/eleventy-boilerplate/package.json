{
  "name": "@pragmatics/eleventy-boilerplate",
  "version": "1.2.0",
  "description": "A boilerplate for eleventy websites",
  "homepage": "https://pragmatics.netlify.app",
  "repository": {
    "type": "git",
    "url": "http://github.com/pvds/eleventy-boilerplate"
  },
  "keywords": [
    "pragmatics",
    "eleventy",
    "eleventy pwa",
    "eleventy starter",
    "eleventy boilerplate",
    "11ty",
    "11ty pwa",
    "11ty starter",
    "11ty boilerplate"
  ],
  "author": "Peter van der Steen",
  "license": "MIT",
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "clean": "del-cli dist",
    "start": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "start:clean": "run-s clean start --print-label",
    "build": "cross-env ELEVENTY_ENV=production eleventy",
    "build:clean": "run-s clean build --print-label",
    "lint": "run-p lint:*",
    "lint:js": "eslint . --cache --fix",
    "lint:css": "stylelint **/*.scss --cache --fix --allow-empty-input",
    "lint:format": "prettier . --write",
    "test": "jest",
    "test:changed": "jest -o"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "stylelint --fix --allow-empty-input",
    "*.js": "eslint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@babel/core": "^7.11.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@pragmatics/eleventy-plugin-pwa": "^1.1.1",
    "@pragmatics/eslint-config": "^1.0.1",
    "@pragmatics/stylelint-config": "^2.0.2",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-css": "^4.2.3",
    "critical": "^2.0.3",
    "cross-env": "^7.0.2",
    "cssesc": "^3.0.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.9.0",
    "eslint-plugin-jest": "^24.0.1",
    "focus-trap": "^5.1.0",
    "focus-visible": "^5.1.0",
    "html-minifier": "^4.0.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "luxon": "^1.24.1",
    "markdown-it": "^11.0.0",
    "memfs": "^3.2.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.1",
    "svg-sprite": "^1.5.0",
    "webpack": "^4.44.1"
  }
}
